<%= form_for(@article, html: { multipart: true }) do |form| %>
  <ul class="errors">
  <% @article.errors.full_messages.each do |error_message| %>
    <li><%= error_message =%></li>
  <% end %>
  </ul>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.label :tag_list %>
    <%= form.text_field :tag_list %>
  </div>
  <div>
    <% if @article.image.exists? %>
      <%= image_tag @article.image.url(:thumb) %>
    <% end %>
    <%= form.label :image, "Attach your image" %>
    <%= form.file_field :image %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
